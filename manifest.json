{
  "name": "ChatApp Pro - Advanced Messaging Platform",
  "short_name": "ChatApp Pro",
  "description": "Advanced chat application with groups, channels, and bot management",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#1a73e8",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["social", "communication"],
  "icons": [
    {
      "src": "https://ui-avatars.com/api/?name=ChatApp+Pro&background=1a73e8&color=fff&size=192",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "https://ui-avatars.com/api/?name=ChatApp+Pro&background=1a73e8&color=fff&size=512",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "New Group",
      "short_name": "New Group",
      "description": "Create a new group chat",
      "url": "/?action=new-group",
      "icons": [
        {
          "src": "https://ui-avatars.com/api/?name=+&background=28a745&color=fff&size=96",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Admin Panel",
      "short_name": "Admin",
      "description": "Access admin panel",
      "url": "/?action=admin",
      "icons": [
        {
          "src": "https://ui-avatars.com/api/?name=A&background=dc3545&color=fff&size=96",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "audio/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".ogg"],
        "audio/*": [".mp3", ".wav", ".ogg"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "chatapp",
      "url": "/?action=join&room=%s"
    }
  ]
}